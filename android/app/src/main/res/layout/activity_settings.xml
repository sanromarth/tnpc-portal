<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Premium Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/text_primary"
                android:padding="8dp"
                android:contentDescription="Go back"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />
        </RelativeLayout>

        <!-- Security Section Card -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SECURITY"
            style="@style/TextAppearance.TNPCPortal.SectionTitle"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/settings_card_bg"
            android:paddingVertical="4dp">

            <!-- Biometric Lock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="@color/accent"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Security" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biometric Lock"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Require fingerprint or PIN on launch"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchBiometric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notifications Section Card -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICATIONS"
            style="@style/TextAppearance.TNPCPortal.SectionTitle"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/settings_card_bg"
            android:paddingVertical="4dp">

            <!-- Push Notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_popup_reminder"
                    app:tint="@color/accent"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Notifications" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Push Notifications"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive placement and update alerts"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- General Section Card -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENERAL"
            style="@style/TextAppearance.TNPCPortal.SectionTitle"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/settings_card_bg"
            android:paddingVertical="4dp">

            <!-- Clear Cache -->
            <LinearLayout
                android:id="@+id/rowClearCache"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Clear cache" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Cache"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvCacheSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textSize="12sp"
                        android:textColor="@color/text_hint" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/text_disabled" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="54dp"
                android:background="@color/divider" />

            <!-- Rate App -->
            <LinearLayout
                android:id="@+id/rowRateApp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Rate app" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate This App"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="54dp"
                android:background="@color/divider" />

            <!-- Share App -->
            <LinearLayout
                android:id="@+id/rowShareApp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Share app" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share App"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/text_disabled" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="54dp"
                android:background="@color/divider" />

            <!-- Reset Onboarding -->
            <LinearLayout
                android:id="@+id/rowResetOnboarding"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_slideshow"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Reset onboarding" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reset Onboarding"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/text_disabled" />
            </LinearLayout>
        </LinearLayout>

        <!-- About Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="36dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:layout_marginBottom="14dp"
                android:contentDescription="App icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TNPC Portal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sri GCSR College, Rajam"
                android:textSize="13sp"
                android:textColor="@color/text_hint"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0"
                android:textSize="12sp"
                android:textColor="@color/text_disabled"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with ❤ for Sri GCSR College"
                android:textSize="11sp"
                android:textColor="@color/text_disabled"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2026 Training \u0026 Placement Cell"
                android:textSize="10sp"
                android:textColor="@color/text_disabled" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
